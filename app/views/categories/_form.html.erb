<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-5 mb-3 bg-info rounded d-flex flex-column", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, "Category name",class: "col-2 col-form-label text-light" %>
          <div class="col-10 mb-5">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of Category" %>
          </div>
        </div>


        <div class="form-group row justify-content-center w-50 m-0 categoryInput">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
    </div>
  </div>
</div>